{
	"compileOnSave": true,
	"compilerOptions": {
		"experimentalDecorators": true,
		"pretty": false,
		"module": "commonjs",
		"target": "es2016",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"declaration": true,
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"typeRoots": ["node_modules/@types"],
		"paths": {
			"*": [
				"node_modules/*",
				"src/types/*"
			]
		},
		"types": [
			"bluebird-global"
		],
		"alwaysStrict": true
	},
	"include": [
		"src/**/*"
	]
}